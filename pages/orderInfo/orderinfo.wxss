page {
  height: 100%;
}

/* 导航栏 */
.navBar {
  width: 100%;
  background-color: #ffffff;
}

.navBar .navBar_title {
  /* width: 600rpx; */
  font-size: 36rpx;
  font-weight: bold;
  color: black;
  display: flex;
  align-items: center;
}


.orderInfo_box {
  height: 100%;
}

.box_view {
  height: 100%;
  background-color: #F7F7F7;
  position: relative;
}

/* 地址 */
.address_view {
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  color: #777777;

  /* border-bottom: 2rpx #999999 solid ; */
}

.address_view .address_item>view:last-child {
  font-size: 28rpx;
}


.address_view .address_userInfo {
  display: flex;
  align-items: center;
}

.address_view .address_userInfo>view:first-child {
  margin-right: 10rpx;
  color: #5E5E5E;
}

.address_view .address_userInfo>view:last-child {
  color: #FF495E;
}

/* 彩色条 */
.colorBar {
  width: 100%;
  height: 8rpx;
  display: flex;
  flex-wrap: nowrap;
  overflow: hidden;
  background-color: #fff;
}

.colorBar>view:nth-child(2n-1) {
  margin-right: 36rpx;
  width: 46rpx;
  height: 100%;
  background: #32BDDE;
  transform: skewX(-45deg);
}

.colorBar>view:nth-child(2n) {
  margin-right: 36rpx;
  width: 46rpx;
  height: 100%;
  background: #EC5151;
  transform: skewX(-45deg);
}

/* 商品列表 */
.orderList_view {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  margin-top: 26rpx;
}

.address_infor {
  margin-bottom: 16rpx;
}

.address_infor .orderList_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx #F1F1F1 solid;
}

.address_infor .orderList_title>view:first-child {
  color: #333333
}

.address_infor .orderList_title>view:last-child {
  color: #FF495E
}

.address_infor .orderList_info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #777777;
}


.scroll-view_box {
  /* height: 310rpx; */
  width: 100%;
  box-sizing: border-box;
  display: flex;
  margin-bottom: 50rpx;
}

.scroll-view_box .view_left {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx #EEEEEE solid;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}

.scroll-view_box .view_left image {
  width: 100%;
  height: 100%;
}


.scroll-view_box .view_right {
  flex: 1;
  margin-left: 46rpx;
}

.scroll-view_box .view_right .view_title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.scroll-view_box .view_right .view_colorText {
  color: #868686;
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.scroll-view_box .view_right .view_price {
  color: #FF3D3D;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  /* font-weight: bold; */
}

.scroll-view_box .view_right .view_price>view:last-child {
  color: #878787;
}

.total {
  text-align: right;
  color: #777777;
  font-size: 32rpx;
}


/* 订单金额 */
.orderMoney {
  margin-top: 26rpx;
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.orderMoney .title {
  color: #444444;
  font-size: 32rpx;
  border-bottom: 2rpx #F1F1F1 solid;
  padding: 16rpx 0;
}

.orderMoney .orderMoney_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}

.orderMoney .orderMoney_item>view:first-child {
  color: #777777;
}

.orderMoney .orderMoney_item>view:last-child {
  color: #FF495E;

}

.fixed_bottom {
  position: fixed;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  bottom: 0;
  display: flex;
  align-items: center;
  /* justify-content: space-around; */
}

.fixed_bottom>view:first-child {
  width: 50%;
  height: 100%;
  font-size: 36rpx;
  color: #333333;
  text-align: center;
  line-height: 90rpx;
}

.fixed_bottom>view:last-child {
  height: 100%;
  flex: 1;
  font-size: 36rpx;
  background-color: #FF495E;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
}
page{
  height: 100%;
}

/* 导航栏 */
.navBar {
  width: 100%;
  background-color: #fff;
}

.navBar .navBar_title {
  /* width: 600rpx; */
  font-size: 36rpx;
  font-weight: bold;
  color: black;
  display: flex;
  align-items: center;
}

.shopSearchList_box {
  height: 100%;
  background-color: #F7F7F7;
}

.shopSearchList_box .input_view{
  display: flex;
  padding: 20rpx;
  background-color: #FFFFFF;
  align-items: center;
  border-top: 2rpx #F7F7F7 solid;
  border-bottom: 2rpx #EEEEEE solid;
}
.shopSearchList_box .input_view>view:nth-child(1){
  /* padding-left: 20rpx; */
  padding-right: 10rpx;
}
.shopSearchList_box .input_view>view:nth-child(2){
  font-size: 44rpx;
  flex: 1;
}

.sort_view {
  display: flex;
  height: 80rpx;
  background-color: #FFFFFF;
  border-bottom: 2rpx #EEEEEE solid;
}

.sort_view>view{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.sort_view .price_jiaGe{
  padding-right: 60rpx;
}

/* 商品1 */
.mian_shop1{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

/* 商品2 */
.mian_shop2{
  display: flex;
  background-color: #fff;
  border-bottom: 2rpx #F7F7F7 solid;
}

.mian_shop2 .view_image{
  width: 280rpx;
  height: 280rpx;
}
.mian_shop2 .view_image image{
  width: 100%;
  height: 100%;
}

.mian_shop2  .mian_view_text {
  flex: 1;
  padding: 20rpx;
}

.mian_shop2  .mian_view_text view:first-child {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 32rpx;
  color: #000;
} 

.mian_shop2  .mian_view_text .mian_view_text-lastView {
  font-size: 34rpx;
  color: #FF495E;
} 

.mian_shop2  .mian_view_text .mian_view_text-lastView text:last-child {
  color: #999999;
  font-size: 20rpx;
  margin-left: 20rpx;
  text-decoration: line-through;
}

.active {
  color: #FF495E !important;
}
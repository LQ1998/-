.scroll-view_box{
  /* height: 310rpx; */
  width: 100%;
  background-color: #fff;
  border-bottom: 2rpx #EEEEEE solid;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
}
.scroll-view_box .view_left{
  width: 210rpx;
  height: 210rpx;
  border: 2rpx #EEEEEE solid;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}
.scroll-view_box .view_left image{
  width: 100%;
  height: 100%;
}


.scroll-view_box .view_right{
  flex: 1;

}
.scroll-view_box .view_right .view_title{
  height: 98rpx;
  /* font-size: 28rpx; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.scroll-view_box .view_right .view_colorText{ 
  height: 68rpx;
  color: #868686;
  font-size: 24rpx;
  /* white-space: pre-wrap; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  
}
.scroll-view_box .view_right .view_price{
  color: #FF3D3D; 
  font-size: 32rpx;
  font-weight: bold;
}
.scroll-view_box .view_right .view_btn{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.scroll-view_box .view_right .view_btn .btn{
  width: 244rpx;
  height: 70rpx;
  border: 2rpx #EEEEEE solid;
  border-radius: 16rpx;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
}
.scroll-view_box .view_right .view_btn .btn view:nth-child(1){
  width: 70rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 2rpx #EEEEEE solid;
}
.scroll-view_box .view_right .view_btn .btn view:nth-child(2){
  width: 104rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scroll-view_box .view_right .view_btn .btn view:nth-child(3){
  width: 70rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 2rpx #EEEEEE solid;
}

.prohibit{
  background-color: #F7F7F7 !important;
}